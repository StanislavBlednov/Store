<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight"/>
    <style name="AppTheme.BottomNavigationBar" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>
    <style name="NormalText">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    <style name="TitleText">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppTheme.Button" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="AppTheme.ImageButton" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="colorButtonNormal">@android:color/transparent</item>
    </style>
</resources>